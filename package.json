{
  "name": "open-context",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm dev:all",
    "dev:app": "tauri dev --no-watch",
    "dev:web": "pnpm --filter open-web dev",
    "dev:server": "pnpm --filter open-node dev",
    "dev:all": "pnpm dev:app && pnpm dev:server",
    "build:web": "pnpm --filter open-web build",
    "build:server": "pnpm --filter open-node build",
    "build:app": "tauri build",
    "build:all": "pnpm build:server && pnpm build:app",
    "preview": "pnpm --filter open-web preview",
    "tauri": "tauri",
    "fmt": "pnpm fmt:js && pnpm fmt:rs",
    "fmt:js": "prettier -w . --log-level warn",
    "fmt:rs": "cargo fmt --all",
    "lint": "pnpm run lint:rs && pnpm run lint:js",
    "lint:rs": "cargo clippy --all --fix --allow-dirty --allow-staged",
    "lint:js": "oxlint . --type-aware --fix"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.6",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "oxlint": "^1.41.0",
    "oxlint-tsgolint": "^0.11.1",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "~5.8.3",
    "vite": "^7.3.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "classic-level",
      "esbuild",
      "less",
      "msgpackr-extract",
      "tree-sitter",
      "tree-sitter-bash",
      "tree-sitter-c",
      "tree-sitter-c-sharp",
      "tree-sitter-cpp",
      "tree-sitter-css",
      "tree-sitter-go",
      "tree-sitter-html",
      "tree-sitter-javascript",
      "tree-sitter-jsdoc",
      "tree-sitter-json",
      "tree-sitter-python",
      "tree-sitter-typescript"
    ],
    "peerDependencyRules": {
      "allowAny": [
        "tree-sitter"
      ]
    },
    "patchedDependencies": {
      "marked-terminal": "patches/marked-terminal.patch"
    }
  }
}
