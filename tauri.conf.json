{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "open-context",
  "version": "0.1.0",
  "identifier": "com.guobin.open-context",
  "build": {
    "beforeDevCommand": "echo 'you need run: pnpm dev:web'",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm --filter open-web build",
    "frontendDist": "./packages/open-web/dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "",
        "width": 1027,
        "height": 720,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDA5MEUwOEM0MkY0NEU0MTYKUldRVzVFUXZ4QWdPQ2I1YUNUTlRHRUZSaXRzclVWUXo3NVJySFZ0dFlRbm4rNHZKN1ZPcHl5eWQK",
      "endpoints": ["https://github.com/user/repo/releases/latest/download/latest.json"]
    }
  }
}
